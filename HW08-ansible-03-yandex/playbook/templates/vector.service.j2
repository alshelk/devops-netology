[Unit]
Description=Vector Service
Documentation=https://vector.dev
After=network-online.target
Requires=network-online.target

[Service]
User=root
Group=root
ExecStartPre=/usr/bin/vector validate --config-yaml {{ vector_config_dir }}/vector.yml
ExecStart=/usr/bin/vector --config-yaml {{ vector_config_dir }}/vector.yml
ExecReload=/usr/bin/vector validate --config-yaml {{ vector_config_dir }}/vector.yml
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
AmbientCapabilities=CAP_NET_BIND_SERVICE
EnvironmentFile=-/etc/default/vector
# Since systemd 229, should be in [Unit] but in order to support systemd <229,
# it is also supported to have it here.
StartLimitInterval=10
StartLimitBurst=5
[Install]
WantedBy=multi-user.target
